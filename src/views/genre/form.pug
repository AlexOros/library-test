extends ../layout

block content

  h1 !{title}

  form(method='POST')
    div.form-group
      label(for='name') Genre:
      input#name.form-control(type='text' placeholder='Fantasy, Poetry etc.' name='name' value=(undefined===genre ? '' : genre.name) )
    button.btn.btn-primary(type='submit') Submit


  if errors
    div.alert.alert-danger.mt-3
      h6 Errors:
      ul
      for error in errors
        li!= error.msg
